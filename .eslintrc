{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "standard",
    "prettier",
    "prettier/standard",
    "plugin:security/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "array-callback-return": "error",
    "complexity": ["error", 3],
    "max-statements": ["error", 10],
    "max-statements-per-line": ["error", { "max": 1 }],
    "max-nested-callbacks": ["error", 2],
    "max-depth": ["error", { "max": 2 }],
    "max-lines": ["error", 150],
    "no-eval": "error",
    "no-return-assign": "error",
    "no-param-reassign": "error",
    "no-var": "error",
    "no-console": "error",
    "prefer-const": "error",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "prefer-destructuring": "error",
    "prefer-spread": "error"
  },
  "plugins": ["react", "react-hooks", "security", "prettier"]
}
